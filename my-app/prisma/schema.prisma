generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum StatusLivro {
  LIDO
  LENDO
  QUERO_LER
}

// 2. Use o Enum no seu Model
model Livro {
  id     Int    @id @default(autoincrement())
  titulo String
  autor  String
  status StatusLivro @default(QUERO_LER) // Define um valor padr√£o
}